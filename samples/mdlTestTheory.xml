<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<theory xmlns="http://spin.nicta.org.au/spindle/spindleDefeasibleTheory2.xsd">
    <convert>
        <from>BEL</from>
        <to>INT</to>
        <to>OBL</to>
    </convert>
    <convert>
        <from>OBL</from>
        <to>INT</to>
    </convert>
    <conflict>
        <mode>BEL</mode>
        <conflictWIth>INT</conflictWIth>
    </conflict>
    <conflict>
        <mode>OBL</mode>
        <conflictWIth>INT</conflictWIth>
    </conflict>
    <rule ruletype="DEFEASIBLE">
        <mode>BEL</mode>
        <head>
            <literal>
                <atom>RingBearer</atom>
            </literal>
        </head>
        <body>
            <literal>
                <atom>EntrustedByElrond</atom>
                <mode>BEL</mode>
            </literal>
        </body>
    </rule>
    <rule ruletype="STRICT">
        <mode>OBL</mode>
        <head>
            <literal>
                <atom>DestroyRing</atom>
            </literal>
        </head>
        <body>
            <literal>
                <atom>RingBearer</atom>
                <mode>BEL</mode>
            </literal>
        </body>
    </rule>
    <rule ruletype="STRICT">
        <mode>INT</mode>
        <head>
            <literal>
                <mode>BEL</mode>
                <not>
                    <atom>GoToMordor</atom>
                </not>
            </literal>
        </head>
        <body>
            <literal>
                <atom>GoToShine</atom>
                <mode>INT</mode>
            </literal>
        </body>
    </rule>
    <rule ruletype="STRICT">
        <mode>BEL</mode>
        <head>
            <literal>
                <not>
                    <atom>DestroyRing</atom>
                </not>
            </literal>
        </head>
        <body>
            <literal>
                <mode>BEL</mode>
                <not>
                    <atom>GoToMordor</atom>
                </not>
            </literal>
        </body>
    </rule>
    <fact>
        <atom>GoToShine</atom>
        <mode>INT</mode>
    </fact>
    <fact>
        <atom>EntrustedByElrond</atom>
        <mode>BEL</mode>
    </fact>
</theory>
